<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MakeCarSelfModeFragment">

    <ImageButton
        android:id="@+id/ib_exit"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/ic_arrow"
        app:layout_constraintBottom_toBottomOf="@id/tv_create_my_car_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_create_my_car_title" />

    <TextView
        android:id="@+id/tv_create_my_car_title"
        android:layout_width="wrap_content"
        android:layout_height="129dp"
        android:fontFamily="@font/hyundai_sans_head_bold"
        android:gravity="center"
        android:text="@string/self_mode_kr"
        android:textColor="@color/cool_grey_black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_dictionary_off"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_dictionary_off"
        app:layout_constraintBottom_toBottomOf="@id/tv_create_my_car_title"
        app:layout_constraintEnd_toStartOf="@id/ib_model_change"
        app:layout_constraintTop_toTopOf="@id/tv_create_my_car_title" />

    <ImageButton
        android:id="@+id/ib_model_change"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_model_change"
        app:layout_constraintBottom_toBottomOf="@id/tv_create_my_car_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_create_my_car_title" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/makeCarTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorColor="@color/main_hyundai_blue"
        app:tabIndicatorFullWidth="true"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/main_hyundai_blue"
        app:tabTextAppearance="@style/MyCustomTabText"
        app:tabTextColor="@color/cool_grey_002" />

</androidx.constraintlayout.widget.ConstraintLayout>